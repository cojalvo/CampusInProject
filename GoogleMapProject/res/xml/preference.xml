<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"  >
            <EditTextPreference
            android:icon="@drawable/com_facebook_profile_picture_blank_square"
            android:key="me"
            android:textSize="50px"
            android:summary="הוסף סטטוס"
            android:title="סטטוס" />
    <PreferenceCategory
        android:key="my_area"
        android:title="האזור שלי">

        <CheckBoxPreference android:icon="@drawable/marker_icon" android:key="display_me" android:summary="@string/show_hidw_mee" android:title="@string/show_hide_me_title" />
        <CheckBoxPreference android:icon="@drawable/group_icon" android:key="display_my_friend_only" android:summary="הצג את כולם/את חברי בלבד" android:title="הצג רק את חברי" />
        <Preference
            android:icon="@drawable/calendar_icon"
            android:key="my_calendar"
            android:summary="ערוך את מערכת השעות"
            android:title="מערכת + שלי" />

        <Preference
            android:icon="@drawable/test_icon"
            android:key="my_tests"
            android:summary="ערוך את לוח המבחנים שלי"
            android:title="לוח המבחנים שלי" />
        
    </PreferenceCategory>
    <PreferenceCategory 
        android:key="my_area"
       	android:title="אירועים בקמפוס">
        <ListPreference 
            android:key="event_reminder"
            android:entries="@array/event_reminder"
            android:entryValues="@array/event_reminder_values"
            android:title="תזכורות לאירועים"
            android:defaultValue="300000"
            android:summary="קבל תזכורות לאירועים"/>
       		
    </PreferenceCategory>
</PreferenceScreen>