<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/info_window_event_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:src="@drawable/calendar_icon" 
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/info_window_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/info_window_event_imageView" />

    <TextView
        android:id="@+id/info_window_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_window_event_name"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/info_window_event_imageView" />

    <TextView
        android:id="@+id/info_window_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_window_date"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/info_window_event_imageView" />
    <TextView 
        android:id="@+id/info_window_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_window_event_time"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/info_window_event_imageView"
        />
    <TextView 
        android:id="@+id/info_window_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_window_location_name"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/info_window_event_imageView"/>

</RelativeLayout>