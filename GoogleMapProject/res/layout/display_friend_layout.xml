<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/display_friend_profile_picture_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
		android:layout_marginLeft="2dp"
		android:src="@drawable/com_facebook_profile_picture_blank_portrait"
		android:layout_centerVertical="true"/>
     <TextView 
         android:id="@+id/display_friend_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="8dp"
         android:layout_toRightOf="@+id/display_friend_profile_picture_imageView"
         android:layout_centerVertical="true"/>

     <ImageView
         android:id="@+id/display_friend_navigate_button"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_centerVertical="true"
         android:layout_alignParentRight = "true"
         android:paddingRight="3dp"
         android:src="@drawable/navigate_img"
	     android:background="@drawable/blue_button"/>

</RelativeLayout>
