<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/info_window_friend_profile_picture_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

    <TextView
        android:id="@+id/info_window_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/info_window_friend_profile_picture_imageView" />

    <TextView
        android:id="@+id/info_window_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_window_friend_name"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/info_window_friend_profile_picture_imageView" />

    <TextView
        android:id="@+id/info_window_person_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:text="distance"
        android:layout_toRightOf="@+id/info_window_friend_profile_picture_imageView"
        android:layout_below="@+id/info_window_status"
        android:textColor="@color/common_signin_btn_text_light" />

</RelativeLayout>