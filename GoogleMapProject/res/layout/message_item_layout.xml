
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/message_display_friend_profile_picture_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

     <TextView
         android:id="@+id/message_display_friend_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/message_display_friend_profile_picture_imageView"
         android:layout_toRightOf="@+id/message_display_friend_profile_picture_imageView"
         android:text="Friend Name"
         android:paddingLeft="5dp"
         android:textSize="15sp"
         android:textStyle="bold" />

        <TextView
            android:id="@+id/message_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/message_description"
            android:layout_below="@+id/message_description"
            android:paddingLeft="5dp"
            android:text="distance"
            android:textColor="@color/common_signin_btn_text_light"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/message_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/message_display_friend_name"
            android:layout_below="@+id/message_display_friend_name"
            android:maxLength="20"
            android:paddingLeft="5dp"
            android:text="Content" />

        <ImageView
            android:id="@+id/message_navigation_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/message_display_friend_profile_picture_imageView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:paddingRight="8dp"
            android:src="@drawable/navigate_img" />

</RelativeLayout>
